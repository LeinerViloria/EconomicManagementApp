@model Users

@{
    ViewData["Title"] = "Modify Users";
}

<div class="card cardLogin">
    <div class="card-body">

    <h2 class="text-center">Modify User</h2>
    <h4 class="text-center">@Model.Email</h4>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Modify">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="mb-3">
            <label asp-for="StandarEmail" class="form-label"></label>
            <input type="text" asp-for="StandarEmail" class="form-control" />
            <span asp-validation-for="StandarEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Modify</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Cancel</a>
    </form>

    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
